<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>/index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>MeuServelet</servlet-name>
        <servlet-class>nucleo.MeuServelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MinhaContaServlet</servlet-name>
        <servlet-class>br.com.weboh.kingofgames.control.MinhaContaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovoUsuarioServlet</servlet-name>
        <servlet-class>br.com.weboh.kingofgames.control.NovoUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EfetivaCadastroServlet</servlet-name>
        <servlet-class>br.com.weboh.kingofgames.control.EfetivaCadastroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginOuMeusDadosServlet</servlet-name>
        <servlet-class>br.com.weboh.kingofgames.control.LoginOuMeusDadosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>br.com.weboh.kingofgames.control.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SairServlet</servlet-name>
        <servlet-class>br.com.weboh.kingofgames.control.SairServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VitrineServlet</servlet-name>
        <servlet-class>br.com.weboh.kingofgames.control.VitrineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutoDetalhesServlet</servlet-name>
        <servlet-class>br.com.weboh.kingofgames.control.ProdutoDetalhesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPedidoServlet</servlet-name>
        <servlet-class>br.com.weboh.kingofgames.control.AddPedidoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletaProdutoServlet</servlet-name>
        <servlet-class>br.com.weboh.kingofgames.control.DeletaProdutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtualizarQuantidadeServlet</servlet-name>
        <servlet-class>br.com.weboh.kingofgames.control.AtualizarQuantidadeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MeuServelet</servlet-name>
        <url-pattern>/MeuServelet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MeuServelet</servlet-name>
        <url-pattern>/MeuServelet/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MinhaContaServlet</servlet-name>
        <url-pattern>/minhaconta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovoUsuarioServlet</servlet-name>
        <url-pattern>/novousuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EfetivaCadastroServlet</servlet-name>
        <url-pattern>/efetivacadastro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginOuMeusDadosServlet</servlet-name>
        <url-pattern>/loginoumeusdados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SairServlet</servlet-name>
        <url-pattern>/sair</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VitrineServlet</servlet-name>
        <url-pattern>/vitrine</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoDetalhesServlet</servlet-name>
        <url-pattern>/produtodetalhes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPedidoServlet</servlet-name>
        <url-pattern>/addpedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletaProdutoServlet</servlet-name>
        <url-pattern>/deletaproduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtualizarQuantidadeServlet</servlet-name>
        <url-pattern>/atualizar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
